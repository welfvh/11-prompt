/**
 * Main chat interface component with streaming support
 */
import React, { useState, useRef, useEffect } from 'react';
import { Card, CardContent, CardHeader, CardTitle } from './ui/card';
import { Button } from './ui/button';
import { Textarea } from './ui/textarea';
import { ChatMessage } from './ChatMessage';
import { ApiService } from '@/services/api';
import type { ChatMessage as ChatMessageType, ToolCall, ModelConfig } from '@/types';
import { Send, Loader2, Bot, Brain } from 'lucide-react';

interface ChatInterfaceProps {
  selectedModel: ModelConfig | null;
  selectedPromptId: string;
  modelConfig: Record<string, any>;
}

export const ChatInterface: React.FC<ChatInterfaceProps> = ({
  selectedModel,
  selectedPromptId,
  modelConfig,
}) => {
  const [messages, setMessages] = useState<ChatMessageType[]>([]);
  const [input, setInput] = useState('');
  const [isLoading, setIsLoading] = useState(false);
  const [currentToolCalls, setCurrentToolCalls] = useState<ToolCall[]>([]);
  const [currentReasoning, setCurrentReasoning] = useState<string>('');
  const messagesEndRef = useRef<HTMLDivElement>(null);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  };

  useEffect(() => {
    scrollToBottom();
  }, [messages]);

  const handleSend = async () => {
    if (!input.trim() || !selectedModel) return;

    const userMessage: ChatMessageType = {
      role: 'user',
      content: input.trim(),
      timestamp: new Date().toISOString(),
    };

    setMessages((prev) => [...prev, userMessage]);
    setInput('');
    setIsLoading(true);
    setCurrentToolCalls([]);
    setCurrentReasoning('');

    let assistantContent = '';
    const toolCalls: ToolCall[] = [];
    let reasoning = '';

    try {
      const stream = ApiService.streamChat(
        [...messages, userMessage],
        selectedModel.id,
        selectedPromptId,
        modelConfig
      );

      for await (const event of stream) {
        switch (event.type) {
          case 'tool_call_start':
            const newToolCall: ToolCall = {
              tool: event.data.tool,
              query: event.data.query,
              startTime: Date.now(),
            };
            toolCalls.push(newToolCall);
            setCurrentToolCalls([...toolCalls]);
            break;

          case 'tool_call_end':
            const lastToolCall = toolCalls[toolCalls.length - 1];
            if (lastToolCall) {
              lastToolCall.results = event.data.results;
              lastToolCall.endTime = Date.now();
              setCurrentToolCalls([...toolCalls]);
            }
            break;

          case 'reasoning':
            reasoning = event.data.content;
            setCurrentReasoning(reasoning);
            break;

          case 'content':
            assistantContent += event.data.delta;
            // Update the last message with streaming content
            setMessages((prev) => {
              const newMessages = [...prev];
              const lastMessage = newMessages[newMessages.length - 1];

              if (lastMessage && lastMessage.role === 'assistant') {
                lastMessage.content = assistantContent;
                lastMessage.metadata = {
                  ...lastMessage.metadata,
                  model: selectedModel.id,
                  toolCalls: [...toolCalls],
                  reasoning: reasoning || undefined,
                };
              } else {
                newMessages.push({
                  role: 'assistant',
                  content: assistantContent,
                  timestamp: new Date().toISOString(),
                  metadata: {
                    model: selectedModel.id,
                    toolCalls: [...toolCalls],
                    reasoning: reasoning || undefined,
                  },
                });
              }

              return newMessages;
            });
            break;

          case 'done':
            setIsLoading(false);
            setCurrentToolCalls([]);
            setCurrentReasoning('');
            break;

          case 'error':
            console.error('Stream error:', event.data);
            setIsLoading(false);
            setCurrentToolCalls([]);
            setCurrentReasoning('');
            break;
        }
      }
    } catch (error) {
      console.error('Chat error:', error);
      setMessages((prev) => [
        ...prev,
        {
          role: 'assistant',
          content: `Error: ${error instanceof Error ? error.message : 'Unknown error occurred'}`,
          timestamp: new Date().toISOString(),
        },
      ]);
      setIsLoading(false);
      setCurrentToolCalls([]);
      setCurrentReasoning('');
    }
  };

  const handleKeyPress = (e: React.KeyboardEvent) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      handleSend();
    }
  };

  return (
    <Card className="flex flex-col h-full">
      <CardHeader>
        <CardTitle>Chat</CardTitle>
        {selectedModel && (
          <div className="text-sm text-muted-foreground">
            Model: {selectedModel.name}
          </div>
        )}
      </CardHeader>
      <CardContent className="flex-1 flex flex-col min-h-0">
        <div className="flex-1 overflow-y-auto mb-4 pr-2">
          {messages.length === 0 ? (
            <div className="text-center text-muted-foreground mt-8">
              <Bot className="h-12 w-12 mx-auto mb-4 opacity-50" />
              <p>Start a conversation to test your prompts</p>
            </div>
          ) : (
            messages.map((message, idx) => (
              <ChatMessage key={idx} message={message} />
            ))
          )}

          {/* Show current tool calls and reasoning while streaming */}
          {isLoading && currentToolCalls.length > 0 && (
            <div className="mb-4">
              {currentToolCalls.map((toolCall, idx) => (
                <ToolCallDisplay key={idx} toolCall={toolCall} />
              ))}
            </div>
          )}

          {isLoading && currentReasoning && (
            <Card className="p-3 bg-purple-50 border-purple-200 mb-4">
              <div className="flex items-center gap-2 mb-2">
                <Brain className="h-4 w-4 text-purple-600" />
                <span className="text-sm font-medium text-purple-900">Reasoning</span>
              </div>
              <div className="text-sm text-gray-700 whitespace-pre-wrap">
                {currentReasoning}
              </div>
            </Card>
          )}

          <div ref={messagesEndRef} />
        </div>

        <div className="flex gap-2">
          <Textarea
            value={input}
            onChange={(e) => setInput(e.target.value)}
            onKeyPress={handleKeyPress}
            placeholder={
              selectedModel
                ? "Type your message... (Shift+Enter for new line)"
                : "Select a model to start chatting"
            }
            className="resize-none"
            rows={3}
            disabled={!selectedModel || isLoading}
          />
          <Button
            onClick={handleSend}
            disabled={!input.trim() || !selectedModel || isLoading}
            size="icon"
            className="h-full"
          >
            {isLoading ? (
              <Loader2 className="h-4 w-4 animate-spin" />
            ) : (
              <Send className="h-4 w-4" />
            )}
          </Button>
        </div>
      </CardContent>
    </Card>
  );
};
